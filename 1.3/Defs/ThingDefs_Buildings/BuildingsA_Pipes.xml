<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="BasedHeatingMom" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<designationCategory>Temperature</designationCategory>
		<passability>PassThroughOnly</passability>
		<altitudeLayer>Building</altitudeLayer>
		<tickerType>Normal</tickerType>
		<statBases>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
		<defaultStuff>Steel</defaultStuff>
	</ThingDef>


  <!-- Pipes  -->
  <ThingDef ParentName="BasedHeatingMom" Name="DubsDirtyPipeBase" Abstract="True">
    <label>pipe</label>
    <thingClass>DubsCentralHeating.Building_Pipe</thingClass>
    <graphicData>
      <texPath>DBH/Things/Building/radPipes_atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom5</li>
      </linkFlags>
      <damageData>
        <rect>(0,0.35,1,0.3)</rect>
      </damageData>
    </graphicData>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>DBH/Things/Building/SewagePipe_Atlas_Blueprint</texPath>
      </blueprintGraphicData>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <altitudeLayer>Conduits</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>250</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <clearBuildingArea>false</clearBuildingArea>
    <placeWorkers>
      <li>DubsCentralHeating.PlaceWorker_Pipe</li>
    </placeWorkers>
    <tickerType>Never</tickerType>
    <drawerType>MapMeshOnly</drawerType>
    <modExtensions>
      <li Class="DubsCentralHeating.BuildWaterExt" />
    </modExtensions>
  </ThingDef>


  <ThingDef ParentName="DubsDirtyPipeBase">
    <defName>sewagePipeStuff</defName>
    <label>plumbing</label>
    <description>Plumbing for connecting plumbed things.</description>
    <uiIconPath>DBH/UI/Plumbing</uiIconPath>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>
    <comps>
      <li Class="DubsCentralHeating.CompProperties_Pipe">
        <mode>Sewage</mode>
        <stuffed>true</stuffed>
      </li>
    </comps>
    <researchPrerequisites>
		<li MayRequire="dbhlitemode">Plumbing</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="BasedHeatingMom">
    <thingClass>DubsCentralHeating.Building_Valve</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Standable</passability>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
    </building>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>350</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>-2</Beauty>
      <Mass>2</Mass>
    </statBases>
    <costList>
      <Steel>15</Steel>
    </costList>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <constructEffect>ConstructMetal</constructEffect>
    <defName>plumbingValve</defName>
    <label>plumbing valve</label>
    <pathCost>75</pathCost>
    <description>Opens or closes connections between pipes.</description>
    <graphicData>
      <texPath>DBH/Things/Building/Valve</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <comps>
      <li Class="DubsCentralHeating.CompProperties_Pipe">
        <mode>Sewage</mode>
      </li>
      <li Class="CompProperties_Flickable">
        <commandTexture>DBH/Things/Building/Valve</commandTexture>
        <commandLabelKey>CommandDesignateOpenCloseValveLabel</commandLabelKey>
        <commandDescKey>CommandDesignateOpenCloseValveDesc</commandDescKey>
      </li>
    </comps>
    <designationCategory>Temperature</designationCategory>
    <researchPrerequisites>
		<li MayRequire="dbhlitemode">Plumbing</li>
    </researchPrerequisites>
  </ThingDef>


  
</Defs>